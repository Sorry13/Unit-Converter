<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.TemperatureConverterActivity">

    <TextView
        android:id="@+id/textInputTitle"
        android:background="@drawable/background_edit_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="@string/your_input"
        android:fontFamily="@font/catamaran_semibold"
        android:textSize="50sp"
        />

    <LinearLayout
        android:background="@drawable/background_edit_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textValueToConvert"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/catamaran_semibold"
            android:gravity="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textUnitToConvert"
            android:layout_width="160dp"
            android:fontFamily="@font/catamaran_semibold"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textResultTitle"
        android:background="@drawable/background_edit_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/result"
        android:fontFamily="@font/catamaran_semibold"
        android:textSize="50sp"
        />

    <LinearLayout
        android:background="@drawable/background_edit_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textConvertedValue"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/catamaran_semibold"
            android:gravity="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textConvertedUnit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/catamaran_semibold"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:textSize="25dp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/catamaran_semibold"
        android:text="Menu"
        app:cornerRadius="12dp" />

</LinearLayout>