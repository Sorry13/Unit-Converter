<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unitconvertersm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UnitConverterSM">
        <activity
            android:name=".activities.BMICalculatorActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MemoryConverterActivity"
            android:exported="true" />
        <activity
            android:name=".activities.TimeConverterActivity"
            android:exported="true" />
        <activity
            android:name=".activities.WeightConverterActivity"
            android:exported="true" />
        <activity
            android:name=".activities.CurrencyConverterActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ResultActivity"
            android:exported="true" />
        <activity
            android:name=".activities.TemperatureConverterActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>